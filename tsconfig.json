{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "**/__tests__/**",
    "**/*.test.ts",
    "src/renderer"
  ]
}
